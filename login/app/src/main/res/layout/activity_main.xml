<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_bag"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/colorContract"/>
        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/actionbar_back"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <EditText
            android:id="@+id/login_id"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/login_user"
            android:hint="请输入手机号/账号ID"
            android:background="@drawable/edittext_bg"/>
        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/login_password"
            android:hint="  Password"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"/>
        <Button
            android:id="@+id/logbtn"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/login_button"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Login"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_nullbg"
                android:text="注册"/>
            <View
                android:layout_width="3px"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_nullbg"
                android:text="游客"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tip"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---  第三方登录  ---"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tip"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/weiixn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixin"
            android:background="@drawable/login_weixin"/>
        <ImageView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/qq"
            android:background="@drawable/login_qq"/>/>
    </LinearLayout>

</LinearLayout>